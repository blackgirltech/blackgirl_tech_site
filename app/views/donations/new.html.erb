<div class="col">
  <%= form_for @donation, url: {action: "create"} do |f| %>
    <div class="form-row">
      <label for="card-element">
        Card number
      </label>
      <div id="card-element">
        <!-- a Stripe Element will be inserted here. -->
      </div>

      <input type="number" name="amount">
      <input type="email" name="email">

      <!-- Used to display form errors -->
      <div id="card-errors" role="alert"></div>
    </div>
    <%= f.submit "Donate", class: "btn bg-green white hover-green hover-bg-white b--green mt-1 f3 fw2 col-md-6 offset-md-3"%>
  <% end %>
</div>


<% content_for :script do %>
  <script>
    initialiseStripeDonation('<%=ENV['STRIPE_PUBLISHABLE_KEY']%>', 'new_donation')
  </script>
<% end %>
