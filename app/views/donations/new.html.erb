        <%= form_for @donation, url: {action: "create"}, class: "donateForm" do |f| %>
          <div id="prices">
            <div class="price">
              <span class="priceAmounts">£5</span>
              <input type="radio" name="amount" class="amount" value="5">
            </div>
            <div class="price">
              <span class="priceAmounts">£10</span>
