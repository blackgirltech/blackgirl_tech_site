            </div>
          </div>
          <input type="number" name="amount" id="other" placeholder="Other amount">
          <% if current_member && !active_donor %>
          <div id="frequency">
            <div id="innerFrequency">
              <input type="radio" name="regular" value="monthly" class="monthly">
              <label for="regular">Monthly</label>
              <input type="radio" name="one_off" class="oneOff" value="one off">
              <label for="one_off">One off</label>
            </div>
          </div>
          <% elsif current_member.nil? || active_donor %>
            <%= hidden_field_tag(:one_off, true) %>
          <% end %>

          <fieldset>
              <legend>Payment information:</legend>
              <div id="name">
                  <input type="name" name="name" class="name" placeholder="Name">
              </div>
              <div id="email">
                <% if current_member %>
                  <%= text_field_tag(:email, "#{current_member.email}", class: "email") %>
                <% else %>
                  <input type="email" name="email" class="email" placeholder="Email">
                <% end %>
              </div>
              <div id="card-number">
                <label for="card-element">
                  Card number
                </label>
                <div id="card-element">
                  <!-- a Stripe Element will be inserted here. -->
                </div>
              </div>

            <!-- Used to display form errors -->
            <div id="card-errors" role="alert"></div>
            <% if current_member %>
              <%= hidden_field_tag(:member_id, "#{current_member.id}") %>
            <% end %>
          <%= f.submit "Donate", class: "cta"%>
        <% end %>
      </div>
