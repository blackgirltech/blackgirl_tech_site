
<div class="col-md-6 offset-md-3">
  <h1>Create Application</h1>
  <%= form_for [@opportunity, @application]  do |f| %>
    <div class="form-group">
      <%= f.label :cover_letter%>
      <%= f.text_field :cover_letter, autofocus: true, placeholder: "Tell us why you want to work here.", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :cv %>
      <%= f.file_field :image, direct_upload: true %>
    </div>

    <%= f.hidden_field :opportunity_id, value: @opportunity.id %>
    <%= f.hidden_field :member_id, value: current_member.id %>
    <%= f.submit "Save", class: "cta"%>
    <%= f.submit "Submit", class: "cta"%>
  <% end %>
</div>
